rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    // Helper function to check if user is admin
    // U13 Fix: Complete whitelist enforcement (matches client-side ADMIN_EMAILS)
    function isAdmin() {
      return isAuthenticated() &&
        request.auth.token.email in [
          'edoardo.mongardi18@gmail.com',
          '468327494@qq.com'
        ];
    }

    // Helper function to check if user is participant in a match
    function isMatchParticipant(matchData) {
      return isAuthenticated() &&
        (request.auth.uid == matchData.user1Uid || request.auth.uid == matchData.user2Uid);
    }

    // Users collection
    // Users can read and write their own documents
    // U13 Fix: Prevent client writes to isAdmin field (security hardening)
    match /users/{uid} {
      allow read: if isAuthenticated();
      allow create: if isOwner(uid) && !request.resource.data.keys().hasAny(['isAdmin']);
      allow update: if isOwner(uid) &&
        // Prevent updating isAdmin field (can only be set by Cloud Functions Admin SDK)
        (!request.resource.data.keys().hasAny(['isAdmin']) ||
         request.resource.data.isAdmin == resource.data.isAdmin);
      allow delete: if false; // Users cannot delete their accounts directly
    }

    // Presence collection
    // Phase 3: Locked down to Cloud Functions only
    // Anyone authenticated can read (for matching/discovery)
    match /presence/{uid} {
      allow read: if isAuthenticated();
      allow write: if false; // Phase 3: All writes via Cloud Functions (presenceStart, presenceEnd)
    }

    // Suggestions collection
    // Users can read their own suggestions (from or to them)
    // Writing is done via Cloud Functions
    match /suggestions/{suggestionId} {
      allow read: if isAuthenticated() &&
        (resource.data.fromUid == request.auth.uid || resource.data.toUid == request.auth.uid);
      allow create: if isAuthenticated() &&
        request.resource.data.fromUid == request.auth.uid;
      allow update, delete: if false; // Managed by functions
    }

    // Offers collection
    // Users can read offers they sent or received
    // All writes via Cloud Functions
    match /offers/{offerId} {
      allow read: if isAuthenticated() &&
        (resource.data.fromUid == request.auth.uid || resource.data.toUid == request.auth.uid);
      allow create: if false; // Created by functions only
      allow update: if false; // Updated by functions only
      allow delete: if false;
    }

    // Matches collection
    // Phase 3: Locked down to participant-only access
    // All writes via Cloud Functions only
    match /matches/{matchId} {
      allow read: if isMatchParticipant(resource.data) ||
        // Allow "Did you meet?" confirmation queries (array-contains on pendingConfirmationUids).
        // Users in pendingConfirmationUids are always also user1Uid/user2Uid (subset),
        // so this doesn't leak data to non-participants.
        (isAuthenticated() && request.auth.uid in resource.data.pendingConfirmationUids);
      allow create: if false; // Created by functions
      allow update: if false; // Phase 3: All updates via Cloud Functions
      allow delete: if false;

      // Chat messages subcollection
      // Reads: participants only (verified via get() on parent match doc)
      // Writes: Cloud Functions only (enforces validation, limits, active-match checks)
      match /messages/{messageId} {
        allow read: if isAuthenticated() &&
          (request.auth.uid == get(/databases/$(database)/documents/matches/$(matchId)).data.user1Uid ||
           request.auth.uid == get(/databases/$(database)/documents/matches/$(matchId)).data.user2Uid);
        allow create: if false;  // All writes via Cloud Functions
        allow update: if false;
        allow delete: if false;
      }
    }

    // Places collection
    // Anyone authenticated can read
    // Only admins can write
    match /places/{placeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Feedback collection
    // Users can create feedback for matches they participated in
    // Users can read their own feedback
    match /feedback/{feedbackId} {
      allow read: if isAuthenticated() && resource.data.uid == request.auth.uid;
      allow create: if isAuthenticated() &&
        request.resource.data.uid == request.auth.uid;
      allow update, delete: if false;
    }

    // Reports collection
    // Anyone authenticated can create a report
    // Only admins can read reports
    match /reports/{reportId} {
      allow create: if isAuthenticated() &&
        request.resource.data.reportedBy == request.auth.uid;
      allow read: if isAdmin();
      allow update, delete: if isAdmin();
    }

    // Blocks collection (subcollection under users)
    // Users can read and write their own blocks
    match /blocks/{uid}/blocked/{blockedUid} {
      allow read, write: if isOwner(uid);
    }

    // Session History collection (subcollection under users)
    // Phase 3: Backend-only collection for rate limiting
    // Cloud Functions Admin SDK bypasses these rules
    match /sessionHistory/{uid}/sessions/{sessionId} {
      allow read, write: if false; // Explicit deny for client SDK
    }

    // U23: Idempotency collection
    // Users can read their own idempotency records (for debugging)
    // All writes handled by Cloud Functions
    match /idempotency/{idempotencyId} {
      allow read: if isAuthenticated() && resource.data.uid == request.auth.uid;
      allow write: if false; // Cloud Functions only
    }

    // U22: Active Matches By Pair Guard Collection
    // Enforces "at most one active match per user pair" atomically
    // This is an internal coordination mechanism - no client access needed
    match /activeMatchesByPair/{pairKey} {
      allow read: if false; // Cloud Functions only (no client reads needed)
      allow write: if false; // Cloud Functions only
    }

    // ========================================================================
    // ACTIVITY COMPANION SYSTEM (v2.0)
    // ========================================================================

    // Activity Posts collection
    // All authenticated users can read active posts
    // Creator can create (via Cloud Functions preferred, but allow client create for flexibility)
    // Updates and lifecycle transitions via Cloud Functions only
    match /activityPosts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        request.resource.data.creatorUid == request.auth.uid;
      allow update: if false; // All updates via Cloud Functions
      allow delete: if false;
    }

    // Join Requests collection
    // Requester can read their own request; post creator can read requests for their post
    // All writes via Cloud Functions
    match /joinRequests/{requestId} {
      allow read: if isAuthenticated() &&
        (resource.data.requesterUid == request.auth.uid ||
         resource.data.creatorUid == request.auth.uid);
      allow create: if false; // Created by Cloud Functions (joinRequestSend)
      allow update: if false; // Updated by Cloud Functions (respond, withdraw)
      allow delete: if false;
    }

    // Groups collection
    // Only group members can read
    // All writes via Cloud Functions
    match /groups/{groupId} {
      allow read: if isAuthenticated() &&
        request.auth.uid in resource.data.memberUids;
      allow create: if false; // Created by Cloud Functions (joinRequestRespond)
      allow update: if false; // Updated by Cloud Functions (leave, kick)
      allow delete: if false;
    }

    // Group Chat Messages subcollection
    // Only group members can read messages
    // All writes via Cloud Functions (groupSendMessage)
    match /groupChats/{groupId}/messages/{messageId} {
      allow read: if isAuthenticated() &&
        request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.memberUids;
      allow create: if false; // All writes via Cloud Functions
      allow update: if false;
      allow delete: if false;
    }

    // Map Status collection
    // All authenticated users can read
    // Owner can write and delete their own status
    match /mapStatus/{uid} {
      allow read: if isAuthenticated();
      allow create: if isOwner(uid);
      allow update: if isOwner(uid);
      allow delete: if isOwner(uid);
    }

    // Activity Reports collection
    // Reporter can create; reporter can read own reports; admin can read/update all
    match /activityReports/{reportId} {
      allow create: if isAuthenticated() &&
        request.resource.data.reporterUid == request.auth.uid;
      allow read: if isAuthenticated() &&
        (resource.data.reporterUid == request.auth.uid || isAdmin());
      allow update: if isAdmin();
      allow delete: if false;
    }

    // Asks collection (1v1 chats before join request)
    // Only the asker and the post creator can read the thread
    // Writes via Cloud Functions only
    match /asks/{askId} {
      allow read: if isAuthenticated() &&
        (resource.data.askerUid == request.auth.uid || 
         resource.data.creatorUid == request.auth.uid);
      allow create, update, delete: if false; // All writes via Cloud Functions
      
      match /messages/{messageId} {
        allow read: if isAuthenticated() &&
          (get(/databases/$(database)/documents/asks/$(askId)).data.askerUid == request.auth.uid ||
           get(/databases/$(database)/documents/asks/$(askId)).data.creatorUid == request.auth.uid);
        allow create, update, delete: if false; // All writes via Cloud Functions
      }
    }
  }
}