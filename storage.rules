rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures - allow any authenticated user
    match /profile-pictures/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Place images - public read, admin write
    match /place-images/{allPaths=**} {
      allow read: if true; // Public read for all users
      allow write: if request.auth != null &&
        request.auth.token.email in [
          'edoardo.mongardi18@gmail.com',
          '468327494@qq.com'
        ];
    }
  }
}
