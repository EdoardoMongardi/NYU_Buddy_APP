rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures - authenticated read, own-file write only
    match /profile-pictures/{fileName} {
      allow read: if request.auth != null;
      // fileName is like "userId.jpg" â€” ensure it starts with the authenticated user's UID
      allow write: if request.auth != null && fileName.matches(request.auth.uid + '.*');
    }

    // Place images - public read, admin write
    match /place-images/{allPaths=**} {
      allow read: if true; // Public read for all users
      allow write: if request.auth != null &&
        request.auth.token.email in [
          'edoardo.mongardi18@gmail.com',
          '468327494@qq.com'
        ];
    }

    // Activity post images - authenticated read, owner write
    // Filename format: {postId}.{ext} or {postId}_{timestamp}.{ext}
    match /activity-images/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 2 * 1024 * 1024  // Max 2MB
        && request.resource.contentType.matches('image/.*');  // Images only
    }

    // New Activity Media (Images & Videos)
    match /activity_media/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.auth.uid == userId
        && request.resource.size < 50 * 1024 * 1024 // Max 50MB for videos
        && (request.resource.contentType.matches('image/.*') || request.resource.contentType.matches('video/.*'));
    }
  }
}
