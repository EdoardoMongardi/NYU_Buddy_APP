rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures - authenticated read, own-file write only
    match /profile-pictures/{fileName} {
      allow read: if request.auth != null;
      // fileName is like "userId.jpg" â€” ensure it starts with the authenticated user's UID
      allow write: if request.auth != null && fileName.matches(request.auth.uid + '.*');
    }

    // Place images - public read, admin write
    match /place-images/{allPaths=**} {
      allow read: if true; // Public read for all users
      allow write: if request.auth != null &&
        request.auth.token.email in [
          'edoardo.mongardi18@gmail.com',
          '468327494@qq.com'
        ];
    }
  }
}
